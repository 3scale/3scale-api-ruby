#!/usr/bin/env ruby

require 'bundler/setup'
require 'three_scale/api'

require 'pry'
require 'dotenv'

Dotenv.load

endpoint = ENV.fetch('ENDPOINT')
provider_key = ENV.fetch('PROVIDER_KEY')
verify_ssl = !(ENV.fetch('VERIFY_SSL', 'true').to_s =~ /(true|t|yes|y|1)$/i).nil?
apiclient = ThreeScale::API.new(endpoint: endpoint, provider_key: provider_key, verify_ssl: verify_ssl)

puts '\'apiclient\' created, use it to make calls to the 3scale API on your account\'s Admin domain ' + endpoint
puts 'such as typing \'apiclient.list_services\''

Pry.start
